<%- include("templates/cabecera")%>
<div class="container">
    <div class="shadow-lg pb-3 mb-5 bg-body rounded mt-4">
        <h2 class="ml-3 text-primary">Datos de Notas</h2>
        <br>
        <form action="/insertarnota" method="post">
            <div class="row">
                <div class="col-md-2 ml-3">
                    <label for="codigo" class="form-label" >IdAlumno:</label>
                    <input type="text" name="idAlu" class="form-control" required>
                </div>
                <div class="col-md-2 ml-3">
                    <label for="codigo" class="form-label" >IdCurso:</label>
                    <input type="text" name="idCur" class="form-control" required>
                </div>
                <div class="col-md-2 ml-3">
                    <label for="codigo" class="form-label" >IdAula:</label>
                    <input type="text" name="idAul" class="form-control" required>
                </div>
                <div class="col-md-2 ml-3">
                    <label for="codigo" class="form-label" >IdDocente:</label>
                    <input type="text" name="idDoc" class="form-control" required>
                </div>
                <div class="col-md-2 ml-3">
                    <label for="telefono" class="form-label" >Practicas:</label>
                    <input type="number" name="pra" class="form-control" required>
                </div>
                <div class="col-md-2 ml-3">
                    <label for="codigo" class="form-label" >Parcial:</label>
                    <input type="number" name="par" class="form-control" required>
                </div>
                <div class="col-md-2 ml-3">
                    <label for="codigo" class="form-label" >Final:</label>
                    <input type="number" name="fin" class="form-control" required>
                </div>
                
            </div><button type="submit" class="btn btn-primary ml-3 mt-4">Registrar Notas</button>
        </form>
    </div>
    <table class="table table-hover mt-4">
        <thead class="bg-primary text-white text-center">
            <tr>
                <th>IdAlumno</th>
                <th>IdCurso</th>
                <th>IdAula</th>
                <th>IdDocente</th>
                <th>Practicas</th>
                <th>Parcial</th>
                <th>Final</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody class="text-center">
            <% notas.forEach((nota) =>{ %>
            <tr>
                <td style="display: none;"><%= nota._id%></td>
                <td><%= nota.IdAlumno%></td>
                <td><%= nota.IdCurso%></td>
                <td><%= nota.IdAula%></td>
                <td><%= nota.IdDocente%></td>
                <td><%= nota.Practicas%></td>
                <td><%= nota.Parcial%></td>
                <td><%= nota.Final%></td>
                <td>
                    <a type="button" class="btn btn-success btnEditarNota">Editar</a>
                    <a href="/eliminarnota/<%=nota._id%>" class="btn btn-danger">Delete</a>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<!-- The Modal -->
<div class="modal fade" id="modalNota">
    <div class="modal-dialog">
      <div class="modal-content">
      
        <!-- Modal Header -->
        <div class="modal-header bg-primary text-white" >
          <h2 class="modal-title">Editar Notas</h2>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        
        <!-- Modal body -->
        <div class="modal-body">
          <form action="/actualizarnota" method="post">
            <input type="text" id="e_id" name="e_id" class="form-control" hidden>
            <div class="mb-3">
                <label for="idaula">IdAlumno:</label>
                <input type="text" id="e_idAlu" name="e_idAlu" class="form-control">
            </div>
            <div class="mb-3">
                <label for="aula">IdCurso:</label>
                <input type="text" id="e_idCur" name="e_idCur" class="form-control">
            </div>
            <div class="mb-3">
                <label for="aforo">IdAula:</label>
                <input type="text" id="e_idAul" name="e_idAul" class="form-control">
            </div>
            <div class="mb-3">
                <label for="idaula">IdDocente:</label>
                <input type="text" id="e_idDoc" name="e_idDoc" class="form-control">
            </div>
            <div class="mb-3">
                <label for="idaula">Practicas:</label>
                <input type="text" id="e_pra" name="e_pra" class="form-control">
            </div>
            <div class="mb-3">
                <label for="idaula">Parcial:</label>
                <input type="text" id="e_par" name="e_par" class="form-control">
            </div>
            <div class="mb-3">
                <label for="idaula">Final:</label>
                <input type="text" id="e_fin" name="e_fin" class="form-control">
            </div>
            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Actualizar</button>
            </div>
          </form>
        </div>
      </div>
    </div>
</div>
  <script src="js/nota.js"></script>