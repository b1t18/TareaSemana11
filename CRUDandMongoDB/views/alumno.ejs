<%- include("templates/cabecera")%>
<div class="container">
    <div class="shadow-lg pb-3 mb-5 bg-body rounded mt-4">
        <h2 class="ml-3 text-primary">Datos de Alumno</h2>
        <br>
        <form action="/insertar" method="post">
            <div class="row">
                <div class="col-md-2 ml-3">
                    <label for="codigo" class="form-label" >Código:</label>
                    <input type="text" name="cod" id="cod" class="form-control" required>
                </div>
                <div class="col-md-2 ml-3">
                    <label for="codigo" class="form-label" >Nombre:</label>
                    <input type="text" name="nom" id="nom" class="form-control" required>
                </div>
                <div class="col-md-2 ml-3">
                    <label for="codigo" class="form-label" >Apellido:</label>
                    <input type="text" name="ape" id="ape" class="form-control" required>
                </div>
                <div class="col-md-2 ml-3">
                    <label for="codigo" class="form-label" >Correo:</label>
                    <input type="email" name="cor" id="cor" class="form-control" required>
                </div>
                <div class="col-md-2 ml-3">
                    <label for="telefono" class="form-label" >Teléfono:</label>
                    <input type="number" name="tel" id="tel" class="form-control" required>
                </div>
                
            </div><button type="submit" class="btn btn-primary ml-3 mt-4">Registrar Cliente</button>
        </form>
    </div>
    <table class="table table-hover mt-4">
        <thead class="bg-primary text-white text-center">
            <tr>
                <th>Código</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Correo</th>
                <th>Teléfono</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody class="text-center">
            <% alumnos.forEach((alumno) =>{ %>
            <tr>
                <td style="display: none;"><%= alumno._id%></td>
                <td><%= alumno.IdAlumno%></td>
                <td><%= alumno.Nombres%></td>
                <td><%= alumno.Apellidos%></td>
                <td><%= alumno.Correo%></td>
                <td><%= alumno.Telefono%></td>
                <td>
                    <a type="button" class="btnEditara btn btn-success">Editar</a>
                    <a href="/eliminar/<%=alumno._id%>" class="btn btn-danger">Delete</a>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<!-- The Modal -->
<div class="modal fade" id="modalAlumno">
    <div class="modal-dialog">
      <div class="modal-content">
      
        <!-- Modal Header -->
        <div class="modal-header bg-primary text-white">
          <h2 class="modal-title ">Editar Alumno</h2>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <!-- Modal body -->
        <div class="modal-body">
          <form action="/editar" method="post">
            <input type="text" id="e_id" name="e_id" class="form-control" hidden>
            <div class="mb-3">
                <label for="codigo" >Código:</label>
                <input type="text" name="e_cod" id="e_cod" class="form-control"d>
            </div>
            <div class="mb-3">
                <label for="codigo"  >Nombre:</label>
                <input type="text" name="e_nom" id="e_nom" class="form-control" >
            </div>
            <div class="mb-3">
                <label for="codigo" >Apellido:</label>
                <input type="text" name="e_ape" id="e_ape" class="form-control" >
            </div>
            <div class="mb-3">
                <label for="codigo" >Correo:</label>
                <input type="email" name="e_cor" id="e_cor" class="form-control" >
            </div>
            <div class="mb-3">
                <label for="telefono" >Teléfono:</label>
                <input type="number" name="e_tel" id="e_tel" class="form-control" >
            </div>
            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Actualizar</button>
            </div>
          </form>
        </div>
      </div>
    </div>
</div>
<script src="js/alumno.js"></script>
